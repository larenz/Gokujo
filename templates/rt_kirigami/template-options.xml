                <field name="showAllChildren" type="hidden" default="1"/>
                <field name="class_sfx" type="hidden" default="top"/>
                <field name="cache" type="hidden" default="0"/>
                <field name="module_cache" label="MODULE_CACHE" type="toggle" default="1" />
